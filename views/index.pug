extends layout

block content
  h1= title
  p Welcome to Kousik's Page and dive into endless possibilities
  button(type="button", class="btn btn-secondary", onclick="boost()") Sample Button
  div#boost add in extra
  script.
    let value = 0;
    let amt = 3;
    function boost() {
        amt += 1;
        value += amt;
        document.getElementById("boost").innerText = `Boosted ${value} by ${amt}`;
    }
  
  a(href="/heritagesites") View Heritage Sites
